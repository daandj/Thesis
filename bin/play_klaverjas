#!/usr/bin/env python

import sys

sys.path.append("src")
from game import Game
from player import RandomPlayer
from humanplayer import HumanPlayer

def main() -> int:
    player1 = HumanPlayer(0)
    [player2, player3, player4] = [RandomPlayer() for i in range(0,3)]

    game = Game(player1, player2, player3, player4)
    winner = game.play()

    print("Spelers ", winner + 1, " en ", winner + 3, " hebben gewonnen met  ", 
          game.points[0], " versus ", game.points[1], " punten!")

    return 0

if __name__ == '__main__':
    sys.exit(main())